mixin videoPlayer(video = {})
    .videoPlayer__container
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-play
            .videoPlayer__column 
                .timer__bar 
                .timer__text
                    span.text__currentTime 00:00
                    span /
                    span.text__totalTime 10:00
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
            .videoPlayer__column
                span
                    i.fas.fa-expand